ARG BASE_IMAGE={{ base_image }}
FROM ${BASE_IMAGE} AS base

# Install system packages
{% if apt_packages %}
{% if package_manager == "apt" %}
RUN apt-get update && \
    apt-get install --yes --no-install-recommends{% for package in apt_packages %} \
        {{ package }}{% endfor %} && \
    rm -rf /var/lib/apt/lists/*
{% elif package_manager == "apk" %}
RUN apk add --no-cache{% for package in apt_packages %} \
        {{ package }}{% endfor %}
{% elif package_manager == "dnf" %}
RUN dnf install -y{% for package in apt_packages %} \
        {{ package }}{% endfor %} && \
    dnf clean all
{% endif %}
{% endif %}

# Install Python pip packages
{% if pip_packages %}
RUN pip install --no-cache-dir{% for package in pip_packages %} \
        {{ package }}{% endfor %}
{% endif %}

# Custom build steps
{% for step in build_steps %}
RUN {{ step }}
{% endfor %}

# Create user account
ARG USER_GID=1000
ARG USER_UID=1000
ARG USER_NAME={{ production_user }}
{% if user_creation_style == "alpine" %}
RUN if [ "${USER_NAME}" != "root" ]; then \
        addgroup -g ${USER_GID} ${USER_NAME} && \
        adduser -D -u ${USER_UID} -G ${USER_NAME} ${USER_NAME}; \
    fi
{% else %}
RUN if [ "${USER_NAME}" != "root" ]; then \
        groupadd --gid ${USER_GID} ${USER_NAME} && \
        useradd --uid ${USER_UID} --gid ${USER_GID} --create-home ${USER_NAME}; \
    fi
{% endif %}

# Setup workspace
ARG WORKDIR=/home/${USER_NAME}
ARG WORKSPACE_NAME={{ workspace_name }}
ENV WORKSPACE=${WORKDIR}/${WORKSPACE_NAME}
WORKDIR ${WORKDIR}

################################################################################
# DEVELOPMENT TARGET - development-friendly image with workspace mounting
################################################################################
FROM base AS development-image
ARG USER_NAME
USER ${USER_NAME}

################################################################################
# PRE-PRODUCTION STAGE - transform workspace into production-ready state
################################################################################
FROM base AS pre-production
ARG USER_NAME
ARG WORKSPACE_NAME
COPY --chown=${USER_NAME} ${WORKSPACE_NAME} ${WORKSPACE}

################################################################################
# PRODUCTION TARGET - final self-contained image
################################################################################
FROM base AS production-image
ARG USER_NAME
COPY --from=pre-production --chown=${USER_NAME} ${WORKSPACE} ${WORKSPACE}
USER ${USER_NAME}
{% if production_entrypoint %}
ENTRYPOINT ["{{ production_entrypoint }}"]
{% endif %}
